<% @user = current_user %>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Library</th>
      <th>Address</th>
      <th>City</th>
      <th>Postalcode</th>
      <th>Phone</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.library %></td>
        <td><%= library.address %></td>
        <td><%= library.city %></td>
        <td><%= library.postalcode %></td>
        <td><%= library.phone %></td>
        <td><%= library.number %></td>
        <td><%= link_to 'Show', library %></td>
  <% if user_signed_in? && @user.admin %>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%== pagy_nav(@pagy) %><br>
<%= link_to 'Back', root_path %>
